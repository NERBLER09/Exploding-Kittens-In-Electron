{
  "name": "exploding-kittens-in-electron",
  "productName": "Exploding Kittens In Electron",
  "version": "1.0.0",
  "description": "A fan port of Exploding Kittens to the desktop",
  "main": "src/index.js",
  "build": {
    "win": { 
      "icon": "assets/Exploding-Kitten-Logo.ico",
      "target": ["appx"] 
    },
    "appx": {
      "applicationId": "ExplodimgKittensFanGame",
      "identityName": "11103Nerbler09.ExplodimgKittensFanGame",
      "publisher": "CN=8FCAC29E-A771-4806-AD92-B16FDCD3656F",
      "publisherDisplayName": "Nerbler09",
      "backgroundColor":"#a0beeb"
    }
  },
  "scripts": {
    "start": "electron-forge start",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "package-win": "electron-packager . Exploding-Kittens-In-Electron --overwrite --asar=true --platform=win32  --arch=x64 --icon=\"assets/Exploding-Kitten-Logo.ico\" --prune=true --out=out --version-string.CompanyName=\"Noah Beaudin\" --version-string.FileDescription=\"Exploding Kittens recreated in Electron (sigh)\" --version-string.ProductName=\"Exploding Kittens In Electron\"",
    "package-linux": "electron-packager . Exploding-Kittens-In-Electron --overwrite --asar=true --platform=linux --arch=x64 --icon=\"assets/favicon.png\" --prune=true --out=out"
  },
  "keywords": [],
  "author": {
    "name": "Noah Beaudin",
    "email": "noah.beaudin1@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "exploding_kittens_in_electron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.6.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "@types/jquery": "^3.5.6",
    "electron": "^13.1.7",
    "electron-packager": "^15.3.0",
    "electron-reloader": "^1.2.1"
  }
}
